<div class="col-md-8">
<%= render 'books/list', book: @book, user:@user %>
<h1>Books</h1>
<table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
<% @books.each do |book| %>

    <tr>
      <%= link_to user_path(book.user) do %>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></td>
      <% end %>
      <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>

