

<p class="text-success"><%= flash[:notice] %></p>
<%= render 'books/list', book: @book, user:@user %>
<h1>Books</h1>
<table>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
<% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>

  
  
  
